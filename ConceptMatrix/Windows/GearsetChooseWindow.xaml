                <DataGridTextColumn Header="{Binding Source={x:Static resx:WindowsStrings.GearsetName}}" Binding="{Binding Path=Description}"/>
                <DataGridTextColumn Header="{Binding Source={x:Static resx:WindowsStrings.DateCreated}}" Binding="{Binding Path=DateCreated}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="GearSetSearchText" Style="{StaticResource MaterialDesignFloatingHintTextBox}" MaxLength="240" Margin="10,323,0,0" VerticalAlignment="Top" HorizontalAlignment="left" Width="336" TextAlignment="Center" TextChanged="GearSetSearchText_TextChanged" BorderThickness="0,0,0,1">
            <materialDesign:HintAssist.Hint>
                <StackPanel Orientation="Horizontal"  Margin="0 0 0 0" >
                    <TextBlock Text="{Binding Source={x:Static resx:WindowsStrings.SearchGearSet}}" />
                </StackPanel>
            </materialDesign:HintAssist.Hint>
        </TextBox>
    </Grid>
</Window>
