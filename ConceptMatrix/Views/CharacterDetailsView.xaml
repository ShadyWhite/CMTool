        <!-- Body Type -->
        <CheckBox IsChecked="{Binding CharacterDetails.BodyType.freeze}" Content="Body Type:" ToolTip="Changes the Body Type of the selected actor." HorizontalAlignment="Left" Margin="311,137,0,0" VerticalAlignment="Top" Height="23"/>
