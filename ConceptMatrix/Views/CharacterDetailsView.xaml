        <!-- Head Type -->
        <CheckBox IsChecked="{Binding CharacterDetails.Head.freeze}" Content="Head Type:" ToolTip="Changes the Head Type of the selected actor." HorizontalAlignment="Left" Margin="311,167,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left" Height="23"  PreviewTextInput="DigitCheckInput" Margin="469,167.118,0,0" Text="{Binding CharacterDetails.Head.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

        <!-- Hairstyle -->
        <CheckBox IsChecked="{Binding CharacterDetails.Hair.freeze}" Content="Hairstyle:" ToolTip="Changes the Hairstyle of the selected actor." HorizontalAlignment="Left" Margin="8,407,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left" Height="23"  PreviewTextInput="DigitCheckInput" Margin="168,407.118,0,0" Text="{Binding CharacterDetails.Hair.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button x:Name="HairSelectButton" Content="View" materialDesign:ShadowAssist.ShadowDepth="Depth3" HorizontalAlignment="Left" Margin="231,407.118,0,0" VerticalAlignment="Top" Width="65" Height="23" Click="HairSelectButton_Click_1"/>

        <!-- Hair Color -->
        <CheckBox IsChecked="{Binding CharacterDetails.HairTone.freeze}" Content="Hair Color:" ToolTip="Changes the Hair Color of the selected actor." HorizontalAlignment="Left" Margin="8,437,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left"  PreviewTextInput="DigitCheckInput" Height="23" Margin="168,437.118,0,0" Text="{Binding CharacterDetails.HairTone.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button x:Name="HairColorSearch"  Content="View" HorizontalAlignment="Left" materialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="231,437.118,0,0" VerticalAlignment="Top" Width="65" Height="23" Click="HairSelectButton_Click"/>

        <!-- Highlights -->
        <CheckBox Name="HighlightCheckbox" IsChecked="{Binding CharacterDetails.Highlights.freeze}" Content="" HorizontalAlignment="Left" Margin="103,467,0,0" VerticalAlignment="Top" Height="23" Visibility="Hidden" IsEnabled="False"/>
        <ToggleButton x:Name="HighLightButton" ToolTip="Toggles Highlights for the selected actor." Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding CharacterDetails.Highlights.SpecialActivate}" Margin="128,467,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Checked="HighLightButton_Checked" Unchecked="HighLightButton_Unchecked" />
        <CheckBox IsChecked="{Binding CharacterDetails.HighlightTone.freeze}" Content="Highlights:" ToolTip="Changes the Highlights Color of the selected actor." HorizontalAlignment="Left" Margin="8,467,0,0" VerticalAlignment="Top" Height="23" Checked="HighlightCheckbox_Checked" Unchecked="HighlightCheckbox_Unchecked"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left"  PreviewTextInput="DigitCheckInput" Height="23" Margin="168,467.118,0,0" Text="{Binding CharacterDetails.HighlightTone.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button x:Name="HighlightcolorSearch" Content="View" materialDesign:ShadowAssist.ShadowDepth="Depth3" HorizontalAlignment="Left" Margin="231,467.118,0,0" VerticalAlignment="Top" Width="65" Height="23" Click="HighlightcolorSearch_Click"/>

        <!-- Mouth Type -->
        <CheckBox IsChecked="{Binding CharacterDetails.Lips.freeze}" Content="Mouth Type:" ToolTip="Changes the Mouth Type of the selected actor." HorizontalAlignment="Left" Margin="311,317,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left"  PreviewTextInput="DigitCheckInput" Height="23" Margin="469,317.118,0,0" Text="{Binding CharacterDetails.Lips.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

        <!-- Lips Color -->
        <CheckBox IsChecked="{Binding CharacterDetails.LipsTone.freeze}" Content="Lips Color/Fur Pattern:" ToolTip="Changes the Lips Color and Fur Pattern of the selected actor." HorizontalAlignment="Left" Margin="8,287,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left"  PreviewTextInput="DigitCheckInput" Height="23" Margin="168,287.118,0,0" Text="{Binding CharacterDetails.LipsTone.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button x:Name="LipColorSearch" Content="View" materialDesign:ShadowAssist.ShadowDepth="Depth3" HorizontalAlignment="Left" Margin="231,287.118,0,0" VerticalAlignment="Top" Width="65" Height="23" Click="Button_Click"/>

        <!-- Jaw Type -->
        <CheckBox IsChecked="{Binding CharacterDetails.Jaw.freeze}" Content="Jaw Type:" ToolTip="Changes the Jaw Type of the selected actor." HorizontalAlignment="Left" Margin="311,197,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left" PreviewTextInput="DigitCheckInput" Height="23" Margin="469,197.118,0,0" Text="{Binding CharacterDetails.Jaw.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

        <!-- Nose Type -->
        <CheckBox IsChecked="{Binding CharacterDetails.Nose.freeze}" Content="Nose Type:" ToolTip="Changes the Nose Type of the selected actor." HorizontalAlignment="Left" Margin="311,287,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left" PreviewTextInput="DigitCheckInput" Height="23" Margin="469,287.118,0,0" Text="{Binding CharacterDetails.Nose.value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="55" TextAlignment="Center" FontSize="11.35" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

        <!-- Eyes -->
